<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <%= link_to "Community Tracker",root_path, class: "brand" %>
    <div class="container">
    <nav>
      <ul class ="nav pull-right">
            <li> <%= form_tag('/', :class => 'form-search', :method => 'get') do %>
            <%= text_field_tag :image_url, @url, :class => 'image-url' %>
           <%= submit_tag "Search", :class => 'btn btn-large btn-primary' %>
  <% end %>
   </li>
			      <li><%= link_to "Home", root_path ,class: "links" %></li>
            <li><%= link_to "about us", aboutus_path ,class: "links"%></li>
            <li><%= link_to "Stories", stories_path ,class: "links"%></li>
            <% if signed_in? %>
            <li><%= link_to "Users", '#' %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>

             <li><%= link_to "SignIn", signin_path ,class: "links"%></li>
           <% end %>
             <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Sign In <b class="caret"></b>
              </a> 
              <ul class="dropdown-menu">
                <li>
                  <div>
                  <%= form_tag %>
                  <fieldset>
                    <legend  style = "color: #8c677f" >Please Log in</legend>
                  <div>
                  <label style = "color: #8c677f" for="email">Email:</label>
                    <%= text_field_tag  :email,params[:email],  :autofocus => true, :class => "login" %>
                  </div>
                  <div>
                  <label style = "color: #8c677f" for ="password">Password:</label>
                    <%= password_field_tag :password,params[:password], :class => "login" %>
                  </div>
                  <div>
                    <%=submit_tag "Log in" ,class: 'btn  btn-primary' %>
                  </div>
                   </fieldset>
                 </form>
                </div>
                </li>
              </ul>
            </li>
              </ul>
      </nav>
	</div>
</div>
</header>