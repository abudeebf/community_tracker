<div class="well span8">
<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <h4>Create New Group</h4>
  <br />
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br />
  </div>
  <div class="field">
    <%= f.label :tags %>
    <%= f.text_field :tags %><br />
  </div>
   <div >
    <%= f.label :email %>
    <%= f.text_field :email  %><br />
  </div>
  <div >
    <%= f.label :address %>
    <%= f.text_field :address %><br />
  </div>
  <div >
    <%= f.label :description %>
    <%= f.text_area :description ,rows: 5 ,columns:10%><br />
  </div>
    <div class="field">
    <br />
     <%= f.check_box :gamification%> <font color= "black">Is gamification part of your group?</font> 
  </div><br />
  <div >
    <%= f.label :gold %>
    <%= f.number_field :gold %>
    <%= f.label :silver %>
    <%= f.number_field :silver %>
    <%= f.label :bronze %>
    <%= f.number_field :bronze %>
  </div>
  
    <div>
      <%= f.label "Group Picture" %><br />
      <%= f.file_field :photo %>

    </div>
  <div class="actions">
    <%= f.submit "save" ,class: "btn btn-large btn-primary"%>
  </div>
</div>
<% end %>

