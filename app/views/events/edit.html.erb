<%= provide(:title,'Edit '+ @event.title) %>
<h1>Editing event</h1>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title , width: "750px"%>
 
  </div>
  <div class="field">
    <%= f.label :category %><br />
   <%= f.select :category, options_for_select([["Children", "Children"], ["Homeless", "Homeless"],["Elderly", "Elderly"],["Education","Education"],["Environment","Environment"],["Other","Other"]]) %> 
  </div>
  
  <div class="field">
      <%= f.label "Start time" %><br />
   <%= f.datetime_select(:starttime, {:use_short_month => 1, :order => [:month, :day, :year], :start_year => Time.now.year},{:style => 'width: 60px'} ) %>
  </div>
  <div class="field">
    <%= f.label "End Time" %><br />
    <%= f.datetime_select(:endtime, {:use_short_month => 1, :order => [:month, :day, :year], :start_year => Time.now.year},{:style => 'width: 60px'} ) %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description ,rows: 10 %>
  </div>
  <div class="field">
    <%= f.label "please add a picutre to your event" %><br />
  <%= f.file_field :photo %>
</div>
  <div class="actions">
    <%= f.submit "Save ", class: "btn btn-large btn-primay" %>
  </div>
<% end %>
<%= link_to 'Back', @event %>
